{
   "env": {
      "es2021": true,
      "node": true
   },
   "extends": [
      "standard-with-typescript",
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended"
   ],
   "overrides": [],
   "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
   },
   "rules": {
      "no-use-before-define": "off",
      "@typescript-eslint/no-use-before-define": ["error"],
      "import/extensions": [
         "error",
         "ignorePackages",
         {
            "ts": "never"
         }
      ],
      "prettier/prettier": "error"
   },
   "settings": {
      "import/resolver": {
         "typescript": {}
      }
   },
   "plugins": [
      "prettier"
   ]
}
